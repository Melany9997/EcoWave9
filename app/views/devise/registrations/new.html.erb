<body class="landing-show-container" data-controller="theme">
  <!-- EcoWave Header -->
  <h1 class="landing-header">EcoWave</h1>

  <!-- EcoWave Logo (Above Form) -->
  <div class="logo-placeholder">
      <img src="<%= asset_path('logo.png') %>" alt="EcoWave Logo" class="logo-img">
  </div>

  <div>
    <!-- Devise Sign-Up Form -->
    <div class="session-container">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!-- Input Fields -->
        <div class="session-fields">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "material-input" },
                      placeholder: "EMAIL",
                      label: false %>

          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "material-input" },
                      placeholder: "PASSWORD",
                      label: false %>

          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "material-input" },
                      placeholder: "CONFIRM PASSWORD",
                      label: false %>
        </div>

        <!-- Sign Up Button -->
        <div class="session-btn-container">
          <%= f.button :submit, "SIGN UP", class: "sign-in-page-btn" %>
        </div>
      <% end %>

      <!-- Already Have an Account? -->
      <div class="session-signup-link">
        <%= link_to "Already have an account?", new_user_session_path, class: "signup-text" %>
      </div>
    </div>

    <!-- Night Mode Toggle -->
    <div class="landing-toggle" data-action="click->theme#toggle">
      <img src="<%= asset_path('day.png') %>" alt="Toggle Theme" class="toggle-icon" data-theme-target="icon">
    </div>
  </div>
</body>
