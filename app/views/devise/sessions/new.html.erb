<h1 class="ecowave-header">EcoWave</h1>
<body class="session-body">
  <div class="session-container">
    <!-- EcoWave Title at Top -->

    <!-- Devise Login Form -->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Fields in the center -->
      <div class="session-fields">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "session-input" },
                    placeholder: "EMAIL",
                    label: false %>

        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "session-input" },
                    placeholder: "PASSWORD",
                    label: false %>
      </div>

      <!-- Submit Button -->
      <div class="session-btn-container">
        <%= f.button :submit, "LOG IN", class: "session-btn btn-login" %>
      </div>
    <% end %>
  </div>
</body>

