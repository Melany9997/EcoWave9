<body class="landing-body">
  <div class="landing-container">
    <h1 class="landing-logo">EcoWave</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="landing-buttons">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "sign-in" },
                    placeholder: "EMAIL",
                    label: false %>

        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "sign-in" },
                    placeholder: "PASSWORD",
                    label: false %>
      </div>

      <div class="btn-container">
        <%= f.button :submit, "LOG IN", class: "btn sign-in" %>
      </div>
    <% end %>

    <div class="landing-toggle">
      <button class="dark-mode-toggle">☀️</button>
    </div>
  </div>
</body>


