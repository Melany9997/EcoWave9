<div class="container">
  <h1 class="hr-lines">E C O W A V E</h1>

  <% if @material.photo.attached? %>
    <%= cl_image_tag @material.photo.key, class: "material-photo", height: 300, width: 300, crop: :fill %>
  <% end %>

  <h2><%= @material.fabric_type %></h2>

  <div class="metrics">
    <div class="metric">
      <h3>CO₂ Emissions</h3>
      <p><%= @material.co2 %> kg/m²</p>
    </div>
    <div class="metric">
      <h3>Water Usage</h3>
      <p><%= @material.water_usage %> L/m²</p>
    </div>
    <div class="metric">
      <h3>Electricity Used</h3>
      <p><%= @material.electricity_used %> kWh/m²</p>
    </div>
  </div>

  <div class="material-info">
    <h2>Material Details</h2>
    <ul>
      <li>Fiber: <%= @material.fiber %></li>
      <li>Length: <%= @material.length %>m</li>
      <li>Width: <%= @material.width %>cm</li>
      <li>Weight: <%= @material.grams_per_square_meter %> g/m²</li>
      <li>Color: <%= @material.colour %></li>
      <li>Origin: <%= @material.origin %></li>
      <li>Purchase Location: <%= @material.purchase_location %></li>
      <li>Summary: <%= @material.summary %></li>
    </ul>
  </div>

  <%= link_to "Back", materials_path, class: "btn-back" %>

  <% if @project %>
    <%= link_to project_project_material_path(@project, @material), class: "btn-add-material" do %>
      <i class="fa-solid fa-plus"></i> Add to Project
    <% end %>
  <% else %>
    <p>Select a project to add this material.</p>
    <%= link_to "Select a Project", projects_path, class: "btn-add-material" %>
  <% end %>
</div>

<style>
  .material-photo {
    border-radius: 50%;
    object-fit: cover;
    margin: 20px 0;
  }

  .metrics {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin: 30px 0;
  }

  .metric {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    text-align: center;
  }

  .material-info ul {
    list-style: none;
    padding: 0;
  }

  .material-info li {
    margin: 10px 0;
    padding: 10px;
    background: #f8f9fa;
    border-radius: 4px;
  }
</style>
